@page
@model WebApplication.Pages.Approvals.IndexModel
@{
    ViewData["Title"] = "Approval queue";
}
<h1>Approval queue</h1>

<div class="card bg-dark border-secondary shadow-sm">
  <div class="card-body">
    <partial name="~/Pages/Shared/_Alerts.cshtml" />

    @if (!Model.Pending.Any())
    {
        <p class="text-muted">No pending requests.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Submitted</th>
                        <th>Student</th>
                        <th>Program</th>
                        <th style="width: 32rem;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var r in Model.Pending)
                {
                    <tr>
                        <td>@r.SubmittedAt.ToLocalTime()</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(r.User?.Email))
                            {
                                <a href="mailto:@r.User!.Email"><code>@r.User!.Email</code></a>
                            }
                            else
                            {
                                <code>@r.UserId</code>
                            }
                        </td>
                        <td>@(r.StudyProgram?.Name ?? r.StudyProgramId.ToString())</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <form method="post" asp-page-handler="Approve" class="d-inline-flex me-2">
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <div class="input-group input-group-sm me-2" style="width: 18rem;">
                                        <span class="input-group-text">ðŸ’¬</span>
                                        <input type="text" name="comment" class="form-control" placeholder="Optional comment" />
                                    </div>
                                    <button class="btn btn-sm btn-success" type="submit">Approve</button>
                                </form>
                                <form method="post" asp-page-handler="Reject" class="d-inline-flex">
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <div class="input-group input-group-sm me-2" style="width: 18rem;">
                                        <span class="input-group-text">ðŸ’¬</span>
                                        <input type="text" name="comment" class="form-control" placeholder="Required comment" />
                                    </div>
                                    <button class="btn btn-sm btn-danger" type="submit">Reject</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
  </div>
</div>
