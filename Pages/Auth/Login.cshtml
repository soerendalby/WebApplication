@page
@model WebApplication.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Sign in";
}

<div class="row justify-content-center py-4">
    <div class="col-sm-10 col-md-8 col-lg-5">
        <div class="card bg-dark border-secondary shadow-sm">
            <div class="card-body p-4">
                <h1 class="h3 mb-3">Sign in</h1>
                <partial name="~/Pages/Shared/_Alerts.cshtml" />
                <form method="post" novalidate>
                        <div class="mb-3">
                                <label for="Email" class="form-label">Email</label>
                                <input asp-for="Input.Email" class="form-control" id="Email" autocomplete="username" placeholder="you@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                                <label for="Password" class="form-label">Password</label>
                                <input asp-for="Input.Password" class="form-control" id="Password" type="password" autocomplete="current-password" placeholder="••••••••" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <button class="btn btn-primary w-100" type="submit">Sign in</button>
                        <p class="mt-3 text-muted small">Demo password: <code>demo</code>. Domains: <code>student.dk</code>, <code>admin.dk</code>, <code>mb.dk</code>.</p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
